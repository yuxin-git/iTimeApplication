<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="fill_parent"
        android:layout_height="225dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/image_view_det_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/a1" />




        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_det_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:backgroundTint="@color/iconBackground"
            app:elevation="50dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_back_white"
            tools:ignore="VectorDrawableCompat" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_det_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="55dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:backgroundTint="@color/iconBackground"
            app:elevation="50dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_delete_white"
            tools:ignore="VectorDrawableCompat" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_det_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:backgroundTint="@color/iconBackground"
            app:elevation="50dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_edit_white"
            tools:ignore="VectorDrawableCompat" />

        <FrameLayout
            android:id="@+id/fl_time_count"
            android:layout_width="280dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="170dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/text_view_dis_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/text_view_dis_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    >
                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="0dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/text_view_dis_day"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:textSize="19dp"
                            android:gravity="center"
                            android:text="Text"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:text="DAYS"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="70dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/text_view_dis_hour"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:textSize="19dp"
                            android:gravity="center"
                            android:text="Text"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:text="HRS"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="140dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/text_view_dis_minute"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:textSize="19dp"
                            android:gravity="center"
                            android:text="Text"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:text="MINS"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="210dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/text_view_dis_second"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:textSize="19dp"
                            android:gravity="center"
                            android:text="Text"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:text="SECS"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/image_view_det_name"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:srcCompat="@drawable/con1" />

    <ImageView
        android:id="@+id/image_view_det_remain"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_det_name"
        app:srcCompat="@drawable/con2" />

    <TextView
        android:id="@+id/text_view_det_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/image_view_det_name"
        app:layout_constraintTop_toTopOf="@+id/image_view_det_name" />

    <TextView
        android:id="@+id/text_view_det_remain_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/image_view_det_remain"
        app:layout_constraintTop_toTopOf="@+id/image_view_det_remain" />

    <TextView
        android:id="@+id/text_view_det_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/image_view_det_remain"
        app:layout_constraintTop_toBottomOf="@+id/text_view_det_remain_time" />


</androidx.constraintlayout.widget.ConstraintLayout>